<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <!-- Template for a single timeline entry row -->
    <Button name="GuildHistorianTimelineEntryTemplate" virtual="true" registerForClicks="LeftButtonUp">
        <Size x="0" y="40"/>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentHighlight" setAllPoints="true" alpha="0">
                    <Color r="1" g="1" b="1" a="0.05"/>
                </Texture>
            </Layer>

            <Layer level="ARTWORK">
                <!-- Event icon -->
                <Texture name="$parentIcon">
                    <Size x="28" y="28"/>
                    <Anchors>
                        <Anchor point="LEFT" x="8" y="0"/>
                    </Anchors>
                </Texture>

                <!-- Event title -->
                <FontString name="$parentTitle" inherits="GameFontNormal" justifyH="LEFT" wordwrap="false">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parentIcon" relativePoint="TOPRIGHT" x="8" y="0"/>
                        <Anchor point="RIGHT" x="-100" y="0"/>
                    </Anchors>
                </FontString>

                <!-- Event subtitle/description -->
                <FontString name="$parentSubtitle" inherits="GameFontNormalSmall" justifyH="LEFT" wordwrap="false">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativeTo="$parentIcon" relativePoint="BOTTOMRIGHT" x="8" y="0"/>
                        <Anchor point="RIGHT" x="-100" y="0"/>
                    </Anchors>
                    <Color r="0.7" g="0.7" b="0.7"/>
                </FontString>

                <!-- Timestamp -->
                <FontString name="$parentTimestamp" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-8" y="-4"/>
                    </Anchors>
                    <Color r="0.5" g="0.5" b="0.5"/>
                </FontString>

                <!-- Participant count badge -->
                <FontString name="$parentParticipants" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-8" y="4"/>
                    </Anchors>
                    <Color r="0.6" g="0.6" b="0.6"/>
                </FontString>
            </Layer>
        </Layers>

        <Scripts>
            <OnEnter>
                self.Highlight:SetAlpha(1)
            </OnEnter>
            <OnLeave>
                self.Highlight:SetAlpha(0)
            </OnLeave>
        </Scripts>
    </Button>

    <!-- Date group header template -->
    <Frame name="GuildHistorianDateHeaderTemplate" virtual="true">
        <Size x="0" y="24"/>

        <Layers>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                    <Color r="0.1" g="0.1" b="0.15" a="0.8"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="$parentText" inherits="GameFontNormal" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" x="12" y="0"/>
                    </Anchors>
                    <Color r="0.78" g="0.65" b="0.35"/>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

</Ui>
