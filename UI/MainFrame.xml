<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="GuildHistorianMainFrame" parent="UIParent" hidden="true"
           enableMouse="true" movable="true" resizable="true" clampedToScreen="true"
           inherits="BackdropTemplate">
        <Size x="700" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <ResizeBounds>
            <minResize x="500" y="350"/>
            <maxResize x="1000" y="700"/>
        </ResizeBounds>

        <Layers>
            <Layer level="OVERLAY">
                <!-- Title text -->
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-12"/>
                    </Anchors>
                </FontString>

                <!-- Version text -->
                <FontString name="$parentVersion" inherits="GameFontNormalSmall" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-40" y="-16"/>
                    </Anchors>
                    <Color r="0.6" g="0.6" b="0.6"/>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <!-- Close button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-4" y="-4"/>
                </Anchors>
            </Button>

            <!-- Resize grip -->
            <Button name="$parentResizeButton" enableMouse="true">
                <Size x="16" y="16"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                </Anchors>
                <NormalTexture file="Interface\\ChatFrame\\UI-ChatIM-SizeGrabber-Up"/>
                <HighlightTexture file="Interface\\ChatFrame\\UI-ChatIM-SizeGrabber-Highlight"/>
                <PushedTexture file="Interface\\ChatFrame\\UI-ChatIM-SizeGrabber-Down"/>
                <Scripts>
                    <OnMouseDown>
                        self:GetParent():StartSizing("BOTTOMRIGHT")
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
            </Button>

            <!-- Tab container -->
            <Frame name="$parentTabContainer">
                <Size x="0" y="30"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-36"/>
                    <Anchor point="TOPRIGHT" x="-10" y="-36"/>
                </Anchors>
            </Frame>

            <!-- Content container -->
            <Frame name="$parentContent">
                <Anchors>
                    <Anchor point="TOPLEFT" x="10" y="-70"/>
                    <Anchor point="BOTTOMRIGHT" x="-10" y="10"/>
                </Anchors>
            </Frame>
        </Frames>

        <Scripts>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>

</Ui>
