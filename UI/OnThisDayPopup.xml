<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

    <Frame name="GuildHistorianOnThisDayPopup" parent="UIParent" hidden="true"
           enableMouse="true" movable="true" clampedToScreen="true"
           inherits="BackdropTemplate">
        <Size x="350" y="180"/>
        <Anchors>
            <Anchor point="TOP" y="-120"/>
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormalLarge" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-12"/>
                    </Anchors>
                    <Color r="1" g="0.84" b="0"/>
                </FontString>

                <FontString name="$parentContent" inherits="GameFontNormal" justifyH="LEFT" wordwrap="true">
                    <Size x="310" y="0"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="20" y="-40"/>
                        <Anchor point="TOPRIGHT" x="-20" y="-40"/>
                    </Anchors>
                </FontString>

                <FontString name="$parentClickHint" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="BOTTOM" x="0" y="10"/>
                    </Anchors>
                    <Color r="0.6" g="0.6" b="0.6"/>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-2" y="-2"/>
                </Anchors>
            </Button>
        </Frames>

        <Scripts>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>

</Ui>
